+static void raid10_quiesce(struct mddev *mddev, int state)
+{
+	struct r10conf *conf = mddev->private;
+
+	switch(state) {
+	case 1:
+		raise_barrier(conf, 0);
+		break;
+	case 0:
+		lower_barrier(conf);
+		break;
+	}
+}
